<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--
    The "Theme.CueDetat" style is referenced in the AndroidManifest.xml.
    For a pure Compose app, this theme acts as a placeholder for the system
    before the Compose UI is rendered. We inherit from a basic, non-conflicting
    system theme to avoid resource linking errors. The app's actual look and
    feel is controlled entirely by the CueDetatARTheme composable in Theme.kt.
    -->
        <!-- Base application theme. -->
        <style name="Theme.CueDetat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
            <!-- Primary brand color. -->
            <item name="colorPrimary">@color/purple_500</item>
            <item name="colorPrimaryVariant">@color/purple_700</item>
            <item name="colorOnPrimary">@color/white</item>
            <!-- Secondary brand color. -->
            <item name="colorSecondary">@color/teal_200</item>
            <item name="colorSecondaryVariant">@color/teal_700</item>
            <item name="colorOnSecondary">@color/black</item>
            <!-- Status bar color. -->
            <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
            <!-- Customize your theme here. -->
        </style>
</resources>